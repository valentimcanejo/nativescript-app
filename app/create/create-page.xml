<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">

    <ActionBar title="Criar">
        <NavigationButton text="Go Back" tap="{{ onBackTap }}" android.systemIcon="ic_menu_back"></NavigationButton>

    </ActionBar>
    <ScrollView>
        <StackLayout orientation="vertical" padding="20">

            <!-- Campo de entrada de texto -->
            <Label text="Nome:" fontSize="18" />
            <TextField width="100%" fontSize="15" marginBottom="20" hint="Digite seu nome"
                id="nome" />
            <Label text="Descrição:" fontSize="18" />
            <TextField width="100%" fontSize="15" marginBottom="20" hint="Digite a descrição"
                id="descricao" />


            <Button text="Selecionar Imagem" tap="{{ onImagePickerTap }}" />
            <!-- Botão de envio -->
            <Button text="Enviar" tap="{{ submitForm }}" backgroundColor="green" color="white"
                width="100%" />

        </StackLayout>
    </ScrollView>
</Page>